@model TroubleRegisterViewModel
<div id="contact" class="contact-us section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 wow fadeInUp" data-wow-duration="0.5s" data-wow-delay="0.25s">
                <form asp-controller="TroubleRegister" asp-action="CreateReport" id="contact" method="post">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 wow bounceIn animated headding" data-wow-delay=".1s">
                            <h1 style="color: #ff4c00; margin-bottom: 20px; position: relative; font-family: 'Oswald';">
                                Arıza <span>Kaydı</span>
                            </h1>
                            <p style="font-size: 20px">Arıza kaydı için lütfen bilgilerinizi doldurun.</p>
                        </div>
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-12">
                                    <span asp-validation-for="ACModel" class="text-danger"></span>
                                    <input asp-for="ACModel" type="text" placeholder="Klima Modeli">
                                </div>
                                <div class="col-lg-12">
                                    <span asp-validation-for="ACType" class="text-danger"></span>
                                    <input asp-for="ACType" type="text" placeholder="Klima Tipi">
                                </div>
                                <div class="col-lg-12">
                                    <span asp-validation-for="Capacity" class="text-danger"></span>
                                    <input asp-for="Capacity" type="number" placeholder="Klima Kapasitesi (BTU)">
                                </div>
                                <div class="col-lg-12">
                                    <span asp-validation-for="GasType" class="text-danger"></span>
                                    <input asp-for="GasType" type="text" placeholder="Gaz Tipi">
                                </div>
                                <div class="col-lg-12">
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                    <input asp-for="Description" type="text" placeholder="Arıza Açıklaması">
                                </div>
                                <div class="col-lg-12">
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                    <input asp-for="Address" type="text" placeholder="Adres">
                                </div>
                                <div class="form-group wow fadeInUp animated">
                                    <button data-wow-delay=".3s" class="btn btn-lg btn-block wow fadeInUp animated" type="submit" style="margin-left: 15px">Kayıt Oluştur</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Styles{
<style>
    input {
        background-color: #fff;
        background-image: none;
        border: 1px solid #666;
        border-radius: 4px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        color: #555;
        display: block;
        font-size: 14px;
        height: 57px;
        line-height: 1.42857;
        padding: 10px 12px;
        transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
        width: 100%;
        margin-bottom: 10px;
    }
</style>
}