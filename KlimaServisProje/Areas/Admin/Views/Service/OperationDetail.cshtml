@model OperationPriceViewModal
<div class="page-content p-6">
    <div class="content container">
        <div class="row">
            <div class="col-12">
                <div class="example ">
                    <form method="post" asp-action="OperationDetail" asp-controller="Service" asp-area="Admin">
                        <input type="hidden" asp-for="operationId"/>
                        <div class="form-group">
                            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="@Model.operationName" asp-for="operationName">
                            <label class="form-control-label" for="formGroupExampleInput2">İşlem Adı</label> </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="@Model.description" asp-for="description">
                            <label class="form-control-label" for="formGroupExampleInput2">Açıklama</label> </div>
                        <div class="form-group">
                            <input type="number" class="form-control" id="formGroupExampleInput2" placeholder="@Model.price" asp-for="price">
                            <label class="form-control-label" for="formGroupExampleInput2">Fiyat</label> </div>
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>