@model OperationPriceViewModal
<div class="page-content p-6">
    <div class="content container">
        <div class="row">
            <div class="col-12">
                <div class="example ">
                    <form method="post" asp-action="Add" asp-controller="Service" asp-area="Admin">
                        <div class="form-group">
                            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="İşlem Adı" asp-for="operationName">
                            <label class="form-control-label" for="formGroupExampleInput2">İşlem Adı</label> </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Açıklama" asp-for="description" >
                            <label class="form-control-label" for="formGroupExampleInput2">Açıklama</label> </div>
                        <div class="form-group">
                            <input type="number" class="form-control" id="formGroupExampleInput2" placeholder="Fiyat" asp-for="price">
                            <label class="form-control-label" for="formGroupExampleInput2">Fiyat</label> </div>
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>