@model TroubleRegisterViewModel
@{
    ViewBag.Title = "Üyeli Tipleri";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title">Üyelik Tipleri</h4>
                        </div><!--end col-->
                    </div>  <!--end row-->
                </div><!--end card-header-->
                <div class="card-body">
                    <div id="dxGrid"></div>
                </div><!--end card-body-->
            </div><!--end card-->
        </div> <!--end col-->
    </div><!--end row-->
    <form method="post" asp-action="TechnicianService" asp-controller="Service" asp-area="Admin">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="İşlemi bitir" class="btn btn-block btn-danger"/>
    </form>
</div>


@section Scripts
{
<script src="~/vendor/devextreme-aspnet-data/js/dx.aspnet.data.js"></script>
<script>
    var dataGrid = null;
    $(() => {
        var Ops = @Html.Raw(Json.Serialize(@ViewBag.Ops));
        var url = '../../../api/technicianserviceapi';
        dataGrid = $("#dxGrid").dxDataGrid({
            remoteOperations: { paging: true, filtering: true, sorting: true, grouping: true, summary: true, groupPaging: true },
            dataSource: DevExpress.data.AspNet.createStore({
                key: 'troubleId',
                key:'operationId',
                loadUrl: `${url}/get`,
                updateUrl: `${url}/update`,
                insertUrl: `${url}/insert`,
                deleteUrl: `${url}/delete`,
                onBeforeSend(method, ajaxOptions) {
                    ajaxOptions.xhrFields = { withCredentials: true };
                    console.log(method);
                    console.log(ajaxOptions);
                }
            }),
            editing: {
                mode: 'form',
                allowUpdating: true,
                allowAdding: true,
                allowDeleting: true
            },
            allowColumnResizing: true,
            showColumnLines: true,
            showRowLines: true,
            rowAlternationEnabled: true,
            showBorders: true,
            searchPanel: {
                visible: true,
                width: 240,
                placeholder: "Ara..."
            },
            filterRow: {
                visible: true,
                applyFilter: "auto"
            },
            headerFilter: {
                visible: true
            },
            export: {
                enabled: true,
                fileName: `Tüm Üyelikler_${parseInt(Math.random() * 1000000000)}`,
                allowExportSelectedData: true
            },
            paging: {
                pageSize: 20
            },
            pager: {
                showPageSizeSelector: true,
                allowedPageSizes: [5, 15, 30, 45],
                showInfo: true
            },
            selection: {
                mode: "multiple"
            },
            columns : [
                {
                    caption: 'Id',
                    dataField: "troubleId",
                    visible: false,
                    allowFiltering: false,
                    formItem: { visible: false }
                }, 
                {
                    dataField:"operationId",
                    caption: 'İşlem',
                    lookup: {
                        dataSource: Ops,
                        displayExpr: "name",
                        valueExpr: "id"
                    }
                },
                {
                    caption: 'Fiyat',
                    dataField: "price",
                    dataType: "number",
                    format : "#.## TL"
                }
            ]
        }).dxDataGrid("instance");
    });
</script>
}