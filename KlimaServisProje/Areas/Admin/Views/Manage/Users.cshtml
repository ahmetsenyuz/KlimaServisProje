@{
    ViewBag.Title = "Tüm Kullanıcılar";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title">Kullanıcı Detayları</h4>
                        </div> @*end col*@
                    </div> @*end row*@
                </div> @*end card header*@
                <div class="card-body">
                    <div id="dxGrid"></div>
                </div> @*end card body*@
            </div> @*end card*@
        </div> @*end col*@
    </div> @*end row*@
</div>

@section Scripts{
    <script src="~/vendor/devextreme-aspnet-data/js/dx.aspnet.data.js"></script>
    <script>
        var daraGrid = null;
        $(() => {
            var roller = @Html.Raw(Json.Serialize(@ViewBag.Roles));
            console.log(roller);
            var url = '../../../api/userapi';
            dataGrid = $("#dxGrid").dxDataGrid({
                remoteOperations: { paging: true, filtering: true, sorting: true, grouping: true, summary: true, groupPaging: true },
                dataSource: DevExpress.data.AspNet.createStore({
                    key: 'userId',
                    loadUrl: `${url}/get`,
                    updateUrl: `${url}/update`,
                    onBeforeSen(method, ajaxOptions) {
                        ajaxOptions.xhrFields = { withCredentials: true };
                        console.log(method);
                        console.log(ajaxOptions);
                    }
                }),
                editing: {
                    mode: 'form',
                    allowUpdating: true
                },
                allowColumnResizing: true,
                showColumnLines: true,
                showRowLines: true,
                rowAlternationEnabled: true,
                showBorders: true,
                searchPanel: {
                    visible: true,
                    width: 240,
                    placeHolder: "Ara..."
                },
                filterRow: {
                    visible: true,
                    applyFilter: "auto"
                },
                headerFilter: { visible: true },
                export: {
                    enabled: true,
                    fileName: `Tüm Kullanıcılar_${parseInt(Math.random() * 1000000000)}`,
                    allowExportSelectedData: true
                },
                paging: { pageSize: 20 },
                pager: {
                    showPageSizeSelector: true,
                    allowedPageSizes: [5, 15, 30, 45],
                    showInfo: true
                },
                selection: { mode: "multiple" },
                columns: [
                    {
                        caption: 'Id',
                        dataField: "userId",
                        visible: false,
                        allowFiltering: false,
                        formItem: { visible: false }
                    },
                    {
                        caption: 'Ad',
                        dataField: "name"
                    },
                    {
                        caption: 'Soyad',
                        dataField: "surname"
                    },
                    {
                        caption: 'Kullanıcı Adı',
                        dataField: "userName"
                    },
                    {
                        caption: 'Email',
                        dataField: "email"
                    },
                    {
                        
                        dataField:"roleId",
                        caption: 'Rol',
                        lookup: {
                            dataSource: roller,
                            displayExpr: "name",
                            valueExpr: "id"
                        }
                    }
                ]
            }).dxDataGrid("instance");
        });
    </script>
}